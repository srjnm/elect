                "produces": [
                    "application/json",
                    "text/html"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Set Password",
                "responses": {
                    "200": {
                        "description": ""
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
